@page
@model ITP.WebApp.Pages.Customers.ViewModel
@{
    ViewData["Title"] = "View";
}

<h4>Customer View</h4>
<input value="@Model.CustomerId" />

<div class="icon-preview col s6 m3 first-button">
    <a asp-page="../Customers/Index" class="btn-floating btn-medium waves-effect waves-light white">
        <i class="material-icons dp48 button-item button-item-hover">arrow_back</i>
        <span class="btn-text">Return</span>
    </a>
</div>

    <div class="col s12 m4 card-content-size">
        <h5 class="header">@Model.Customer.Name  @Model.Customer.LastName</h5>
        <div class="card horizontal">
            <div class="card-image">
                <img class="card-image-size" src="~/img/users_icon.png">
            </div>
            <div class="card-stacked card-content-size">
                <div class="card-content s4">
                    <input hidden asp-for="Customer.Id" />
                    <div class="row row-data">
                        <div class="col s7">
                            <label for="doc">Doc Number</label>
                        </div>
                        <div class="col s5">
                            <label for="doc">@Model.Customer.DocNumber</label>
                        </div>
                    </div>
                    <div class="row row-data">
                        <div class="col s7">
                            <label for="age">Age</label>
                        </div>
                        <div class="col s5">
                            <label for="age">@Model.Age</label>
                        </div>
                    </div>
                    <div class="row row-data">
                        <div class="col s7">
                            <label for="city">City</label>
                        </div>
                        <div class="col s5">
                            <label for="city">@Model.Customer.City</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<hr />
<br />

<div>
    <partial name="_IndexVehiclePartial" model="Model.Vehicles" />
</div>